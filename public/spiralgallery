  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SpiralMap Â· Dynamic Image Archive</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #0c0c0c;
      color: #f0f0f0;
      font-family: 'Georgia', serif;
    }
    .image-tile:hover {
      transform: scale(1.05);
    }
    .button-link {
      display: inline-block;
      padding: 0.75em 1.5em;
      border-radius: 9999px;
      background-color: white;
      color: black;
      font-weight: bold;
      transition: all 0.3s ease;
    }
    .button-link:hover {
      background-color: #facc15;
    }
  </style>
</head>
<body>
  <main class="max-w-6xl mx-auto px-6 py-12">
    <section class="text-center mb-12">
      <h1 class="text-5xl font-bold mb-4">ðŸŒ€ SpiralMap Â· Dynamic Image Archive</h1>
      <p class="text-gray-400 mb-6">All uploaded images from <code>/images</code> appear automatically. Grouped by 12 images per floor, from <code>manifest.json</code>.</p>
    </section>
    <div id="gallery-container" class="space-y-24"></div>
    <button onclick="generateManifest()" class="button-link block mx-auto mt-10">ðŸ§¾ Generate manifest.json</button>
  </main>

  <script>
    const imageFolder = 'images/';
    const imagesPerFloor = 12;
    const galleryContainer = document.getElementById('gallery-container');

    fetch(imageFolder + 'manifest.json')
      .then(response => response.json())
      .then(imageList => {
        const totalImages = imageList.length;
        for (let floor = 0; floor < Math.ceil(totalImages / imagesPerFloor); floor++) {
          const floorSection = document.createElement('section');
          floorSection.className = 'mb-24';

          const header = document.createElement('h2');
          header.className = 'text-3xl font-semibold mb-6 text-center';
          header.textContent = `ðŸŒŒ SpiralGallery Â· Floor ${floor + 1}`;

          const grid = document.createElement('div');
          grid.className = 'grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4';

          for (let i = 0; i < imagesPerFloor; i++) {
            const imageIndex = floor * imagesPerFloor + i;
            if (imageIndex >= totalImages) break;

            const filename = imageList[imageIndex];

            const wrapper = document.createElement('div');
            wrapper.className = 'text-center';

            const link = document.createElement('a');
            link.href = imageFolder + filename;
            link.target = '_blank';

            const img = document.createElement('img');
            img.src = imageFolder + filename;
            img.alt = filename;
            img.loading = 'lazy';
            img.className = 'rounded-lg shadow-md transition-transform duration-200 image-tile';

            const caption = document.createElement('p');
            caption.className = 'text-xs text-gray-400 mt-1';
            caption.textContent = filename;

            link.appendChild(img);
            wrapper.appendChild(link);
            wrapper.appendChild(caption);
            grid.appendChild(wrapper);
          }

          floorSection.appendChild(header);
          floorSection.appendChild(grid);
          galleryContainer.appendChild(floorSection);
        }
      })
      .catch(error => {
        console.error('Error loading image manifest:', error);
      });

    function generateManifest() {
      fetch(imageFolder)
        .then(res => res.text())
        .then(html => {
          const parser = new DOMParser();
          const doc = parser.parseFromString(html, 'text/html');
          const files = Array.from(doc.links)
            .map(link => link.getAttribute('href'))
            .filter(name => name && name.match(/\.(jpe?g|png|webp)$/i));

          const manifestJson = JSON.stringify(files, null, 2);
          const blob = new Blob([manifestJson], { type: 'application/json' });
          const url = URL.createObjectURL(blob);

          const a = document.createElement('a');
          a.href = url;
          a.download = 'manifest.json';
          a.click();
          URL.revokeObjectURL(url);
        });
    }
  </script>
</body>
</html>
